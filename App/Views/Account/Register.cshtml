@model BeachRankings.App.Models.ViewModels.RegisterViewModel

@Styles.Render("~/Content/Internal/register.css")

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h3>Create a beachesDB account</h3>
    <hr />

    <div id="register-container" class="row">
        <div class="col-xs-offset-4 col-xs-5">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-extended", @placeholder = "Username" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-extended", @placeholder = "Email" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-extended", @placeholder = "Password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-extended", @placeholder = "Confirm password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-default pull-left" value="Register" />
                </div>
            </div>
        </div>        
    </div>    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}