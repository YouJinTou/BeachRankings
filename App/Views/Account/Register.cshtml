@model RegisterViewModel

@Styles.Render("~/Content/Internal/account.css")

@{
    ViewBag.Title = "BeachesDb Signup";
}

<div id="register-container" class="custom-canvas col-xs-6 col-xs-offset-3">
    <h3>Create a BeachesDb account</h3>
    <hr />

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "register-form", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()        
        <div class="col-xs-10 col-xs-offset-1">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-extended custom-focus-black", @placeholder = "Username" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-extended custom-focus-black", @placeholder = "Email" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-extended custom-focus-black", @placeholder = "Password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-extended custom-focus-black", @placeholder = "Confirm password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 text-left">
                    <div id="blogger-checkbox-container" class="disable-block checkbox-extended">
                        @Html.CheckBoxFor(m => m.Blogger, new { id = "checkbox-blogger" })
                        @Html.LabelFor(m => m.Blogger)
                    </div>
                </div>
            </div>
            <div id="blogs" class="form-group display-none">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Blogs, new { @class = "form-control form-control-extended custom-focus-black", @placeholder = "Separate URLs by a comma" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input id="btn-submit" type="submit" class="btn btn-cta pull-right" value="Register" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Internal/account.js")
}