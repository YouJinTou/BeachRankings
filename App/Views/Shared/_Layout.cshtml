<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@Html.ParseNullString((string)ViewBag.Title, "BeachesDb")</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Internal/main-layout.css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Internal/home.css")
    @Styles.Render("~/Content/External/DataTables/datatables.min.css")
    @Styles.Render("~/Content/External/lightbox/css/lightbox.css")
    @RenderSection("ReviewsStyles", required: false)
    @RenderSection("BeachStyles", required: false)
    @RenderSection("UserStyles", required: false)
</head>
<body>
    <div class="header-wrapper">
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Add Beach", "Add", "Beaches")</li>
                        <li>@Html.ActionLink("Best Beaches", "Add", "Beaches")</li>
                        <li>@Html.ActionLink("Top Contributors", "Add", "Beaches")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="home-search-header">
            <input id="main-search-field" class="custom-focus-black" name="main-search-field" type="text" autocomplete="off" placeholder="Search by land or sea" />
            @*<input type="submit" value="Go" />*@
            <div class="autocomplete-box home-autocomplete-box" style="display: none;"></div>
        </div>
    </div>

    <div class="container body-content">
        <div id="results-container" class="row">
            <div class="loading-image-container col-xs-12">
                <img id="loading-main-results-image" src="~/Content/Images/ajax-loader.gif" alt="Loading" style="display: none;" />
            </div>
            @RenderBody()
        </div>

        <hr />

        <footer id="main-footer">
            <p>&copy; @DateTime.Now.Year - BeachesDb.com</p>

            <div class="custom-modal-popup" data-popup="main">
                <div class="custom-modal-popup-inner">
                    <div class="modal-html-case row" data-html-case="">
                        <p class="col-xs-12"><b>Paste this HTML in your website for a summary of this beach.</b></p>
                        <div class="img-container col-xs-5">
                            <a href="~/Content/Images/beach-export-example.PNG" data-lightbox="beach-export-example">
                                <img class="img-responsive" src="~/Content/Images/beach-export-example.PNG" alt="Export example" />
                            </a>
                        </div>
                        <textarea class="col-xs-7" readonly="readonly" data-custom-modal-text=""></textarea>
                    </div>
                    <div class="modal-non-html-case" data-non-html-case="">
                        <p data-non-html-text-field="" data-custom-modal-text=""></p>
                    </div>

                    <a class="popup-close" data-popup-close="" href="#">x</a>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Internal/utils.js")
    @Scripts.Render("~/Scripts/Internal/index.js")
    @Scripts.Render("~/Scripts/Internal/dashboard.js")
    @Scripts.Render("~/Scripts/Internal/infinite-scroller.js")
    @Scripts.Render("~/Content/External/DataTables/datatables.min.js")
    @Scripts.Render("~/Scripts/Internal/datatables-manager.js")
    @Scripts.Render("~/Content/External/lightbox/js/lightbox.js")
    @RenderSection("scripts", required: false)
</body>
</html>