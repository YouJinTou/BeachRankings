<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Internal/main-layout.css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("HomeStyles", required: false)
    @RenderSection("ReviewsStyles", required: false)
    @RenderSection("BeachStyles", required: false)
    @RenderSection("UserStyles", required: false)
</head>
<body>
    <div class="header-wrapper">
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Add Beach", "Add", "Beaches")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="home-search-header">
            <input id="main-search-field" class="custom-focus" name="main-search-field" type="text" autocomplete="off" placeholder="Search by land or sea" />
            @*<input type="submit" value="Go" />*@
            <div class="autocomplete-box home-autocomplete-box"></div>
        </div>
    </div>
   
    <div class="container body-content">
        <div id="beaches-search-result"></div>
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BeachRankings.com</p>
        </footer>
    </div>    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>