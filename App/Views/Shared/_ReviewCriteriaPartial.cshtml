        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Camping, htmlAttributes: new { @class = "control-label col-md-3 col-sm-11 col-xs-12" })
            <div class="col-md-5 col-md-offset-0 col-sm-11 col-sm-offset-1 col-xs-10 col-xs-offset-1">
                <div id="camping-dragdealer" class="dragdealer">
                    <div class="handle oval" data-camping-handle="@Model.Camping"></div>
