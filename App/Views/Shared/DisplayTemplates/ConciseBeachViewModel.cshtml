@model ConciseBeachViewModel

<div class="row concise-beach">
    <div class="col-md-3">
        <div class="beach-thumbnail">
            @{
                if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <a href="@Model.ImagePath" data-lightbox="beach-image-@Model.Name">
                        <img class="img-responsive" src="@Model.ImagePath" alt="Add a photo" />
                    </a>
                }
                else
                {
                    <span>Add a photo</span>
                }
            }
        </div>
    </div>
    <div class="col-md-6">
        <div class="text-left">
            <h4 class="disable-block">
                <a href="~/Beaches/Details?id=@Model.Id">@Model.Name</a>
            </h4>
            <h5 class="disable-block"><i>@Html.ParseNullString(Model.SecondaryDivision, Model.PrimaryDivision), @Model.Country</i></h5>
        </div>
        <p class="concise-beach-desc text-left">@Model.Description</p>
    </div>
    <div class="col-md-3 text-right score-container">
        <div class="beach-score-box display-inline-block">
            <div class="vertical-center">@Html.ParseNullableValue(Model.TotalScore, "-")</div>
        </div>
        <div class="score-reviews-count text-right">by @Html.PluralizeValue(@Model.ReviewsCount, "user")</div>
        <div class="text-right">
            @Html.ActionLink("Rate this beach", 
               "Post", 
               controllerName: "Reviews", 
               routeValues: new { id = Model.Id }, 
               htmlAttributes: new { @class = "btn btn-cta" })
        </div>
    </div>
</div>