@model UserWatchlistViewModel

<div class="watchlist-row row">
    <div class="col-xs-6">
        <div class="row">
            <div class="col-xs-12">
                <h5>
                    @Html.ActionLink(Model.Name, "GetWatchlist", "Watchlists", 
                   new { id = Model.Id }, new { target = "_blank", data_watchlist_name = "" })

                    @{
                        if (this.User.Identity.CanEditWatchlist(Model.OwnerId))
                        {
                            <span data-edit-watchlist="" class="a-like-span glyphicon glyphicon-edit"></span>
                            <span data-remove-watchlist="@Model.Id" class="a-like-span glyphicon glyphicon-floppy-remove"></span>
                        }
                    }
                </h5>
            </div>
        </div>

        <div class="watchlist-edit-controls watchlist-cancel row display-none">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-9">
                        <input type="text" data-watchlist-edit-name="" class="form-control" value="@Model.Name" />
                    </div>
                </div>

                <div class="row watchlist-edit-buttons-holder">
                    <div class="col-xs-12">
                        <input data-btn-edit-watchlist="@Model.Id" type="button" class="btn-cta-shadow" value="Save" />
                        <input type="button" data-cancel-watchlist="" class="btn btn-reset" value="Cancel" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-6">
        <h5>@Model.BeachesCount</h5>
    </div>
</div>

<hr />