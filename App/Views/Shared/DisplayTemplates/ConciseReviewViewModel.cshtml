@model ConciseReviewViewModel

<div data-expanded="false" data-already-loaded="false" class="concise-review row custom-canvas">
    <div class="col-md-2">
        <img class="img-responsive" src="@Model.AvatarPath" alt="No profile photo" />
        <div class="row">
            <span>@Model.UserName</span>
        </div>
    </div>
    <div class="col-md-10">
        <div class="row">
            <div class="col-xs-12">
                <div class="pull-left">@Model.PostedOn.ToString("MMM d, yyyy")</div>
                <div class="beach-score-box beach-score-box-extended pull-right col-xs-12">
                    <div class="vertical-center">@Html.ParseNullableValue(Model.TotalScore, "-")</div>
                </div>
            </div>         
        </div>
        <div class="row">
            <p class="text-justify">@Model.Content</p>
        </div>        
    </div>
    <div class="col-xs-12 text-right">
        <span data-review-id="@Model.Id" class="a-like-span review-expand glyphicon glyphicon-chevron-down"></span>
    </div>
    <div class="row review-details"></div>
</div>