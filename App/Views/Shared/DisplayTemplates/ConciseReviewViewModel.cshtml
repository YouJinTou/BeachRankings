@model ConciseReviewViewModel
<div data-expanded="false" data-already-loaded="false" class="review concise-review row custom-canvas">
    <div class="col-xs-12">
        @Html.Partial("_ReviewHeadPartial", Model.ReviewHead)

        <hr class="hr-delimiter" />

        <div class="row">
            @Html.Partial("_ReviewUserPartial", Model.ReviewUser)

            <div class="col-md-10">
                <div class="row">
                    <div class="row">
                        <div class="col-xs-12">
                            @Html.Partial("_CriteriaTableHorizontalPartial", new List<HorizontalCriteriaViewModel> { Model.Criteria })
                            <p class="review-content">@Model.Content</p>
                            @{
                                if (Model.IsBlogger && Model.BlogArticles.Count() > 0)
                                {
                                    <div class="blogger-review-part">
                                        <div class="text-left"><i>Read more about it on my blog</i>:</div>
                                        <div class="text-left">
                                            @Html.DisplayFor(model => model.BlogArticles)
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>