@model ManageIndexViewModel

<div class="settings-container custom-canvas col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
    <p id="action-message-box" class="text-info">@ViewBag.StatusMessage</p>
    <div>
        <h3>Account settings</h3>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <dl class="dl-horizontal">
            <dt>Avatar:</dt>
            <dd class="text-left">
                <a data-settings-index="/User/ChangeAvatar/">Change</a>
            </dd>

            <dt>Password:</dt>
            @{ 
                if (Model.HasPassword)
                {
                    <dd class="text-left">
                        <a data-settings-index="/Manage/ChangePassword/">Change</a>
                    </dd>
                }
                else
                {
                    <dd class="text-left">
                        <a data-settings-index="/Manage/SetPassword/">Set</a>
                    </dd>
                }
            }

            <dt>External logins:</dt>
            <dd class="text-left">
                <a data-settings-index="/Manage/ManageLogins/">Manage</a>
            </dd>

            <dt>I blog about beaches</dt>
            <dd class="text-left">
                @using (Html.BeginForm("Blog", "Manage", FormMethod.Post, new { id = "manage-blog-form" }))
        {
            @Html.AntiForgeryToken();

        <div class="row">
            <div class="col-xs-1">
                @Html.CheckBoxFor(m => m.IsBlogger, new { id = "settings-checkbox-blogger" })
            </div>
            <div class="col-xs-11">
                <span class="info-icon glyphicon glyphicon-info-sign"></span>
                <div class="custom-popup" style="display: none;">
                    We will put a link to your blog in every review you leave as well as any articles you refer to.
                </div>
            </div>
        </div>
        <div class="row">
            <div id="settings-blog" class="col-xs-12 form-group display-none">
                @Html.TextBoxFor(m => m.BlogUrl, new { id = "txt-settings-blog-url", @class = "form-control form-control-extended custom-focus-black", @placeholder = "For example, http://www.myblog.com/" })
            </div>
            <div class="col-xs-12">
                <button id="btn-save-blog" class="btn btn-cta display-none">Save</button>
            </div>
        </div>
}
            </dd>
        </dl>
    </div>
</div>