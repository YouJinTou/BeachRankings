@model IndexViewModel

@Styles.Render("~/Content/Internal/dashboard.css")

<div class="settings-container custom-canvas col-xs-6 col-xs-offset-3">
    <p id="action-message-box" class="text-info">@ViewBag.StatusMessage</p>
    <div>
        <h3>Account settings</h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>Avatar:</dt>
            <dd class="text-left">
                <a data-index="avatar">Change</a>
            </dd>
            <dt>Password:</dt>
            <dd class="text-left">
                <a data-index="password">Change</a>
            </dd>
            <dt>I blog about beaches</dt>
            <dd class="text-left">
                @Html.CheckBoxFor(m => m.IsBlogger, new { id = "checkbox-blogger" })
                <span class="info-icon glyphicon glyphicon-info-sign"></span>
                <div class="custom-popup custom-canvas" style="display: none;">
                    We will put a link to your blog in every review you leave.
                </div>
                <div id="blog" class="form-group display-none">
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.BlogUrl, new { @class = "form-control form-control-extended custom-focus-black", @placeholder = "For example, http://www.myblog.com/" })
                    </div>
                </div>  
            </dd>
        </dl>
    </div>
</div>

@Scripts.Render("~/Scripts/Internal/dashboard.js")