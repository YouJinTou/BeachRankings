@model IEnumerable<ConciseReviewViewModel>

@{
    if (!this.Request.IsAjaxRequest())
    {
        <div id="beach-details-reviews-container" class="beach-reviews-container col-lg-8 col-lg-offset-3 col-sm-10 col-sm-offset-2 col-xs-12">
            @Html.DisplayForModel()
        </div>
    }
    else
    {
        if (Model.Count() == 0)
        {
            return;
        }

        @Html.DisplayForModel()
    }
}