@model PostReviewViewModel

@{ 
    ViewBag.Title = "Rate " + Model.BeachName;
}

<div id="post-review-container" class="custom-canvas col-xs-10 col-xs-offset-1">   
    <div class="row">
        <div class="col-xs-4 col-xs-offset-2">
            <div class="row">
                <div class="col-xs-3 text-right">
                    <div class="beach-score-box beach-review-scorebox">
                        <div class="vertical-center">@Html.ParseNullableValue(Model.BeachTotalScore, "-")</div>
                    </div>
                    <span class="display-block">@Html.PluralizeValue(Model.BeachReviewsCount, "review")</span>
                </div>                
                <div class="review-header-info col-xs-8 text-left">
                    <h2>@Model.BeachName</h2>
                    <h5><i>@Model.BeachSecondaryDivision, @Model.BeachCountry</i></h5>
                </div>
            </div>            
        </div>
        <div class="slick-carousel col-xs-4">
            @Html.DisplayFor(model => model.BeachImagePaths)
        </div>
    </div>
    <div class="row">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "submitReviewForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal col-xs-12">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        @Html.TextAreaFor(model => model.Content,
            new
            {
                data_review_content = "",
                @class = "form-control create-review-textarea custom-focus-black",
                @rows = 5,
                @cols = 40,
                @placeholder = "Share your impressions of this beach"
            })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                        <span class="pull-right"><sub>A minimum of 100 symbols</sub></span>
                    </div>
                </div>
                <!--Beach-->
                <div class="form-group">
                    @Html.LabelFor(model => model.SandQuality, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="sand-quality-dragdealer" class="dragdealer">
                            <div class="handle oval" data-sand-quality-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BeachCleanliness, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="beach-cleanliness-dragdealer" class="dragdealer">
                            <div class="handle oval" data-beach-cleanliness-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BeautifulScenery, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="beautiful-scenery-dragdealer" class="dragdealer">
                            <div class="handle oval" data-beautiful-scenery-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CrowdFree, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="crowd-free-dragdealer" class="dragdealer">
                            <div class="handle oval" data-crowd-free-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <!--End Beach-->
                <!--Sea-->
                <div class="form-group">
                    @Html.LabelFor(model => model.WaterPurity, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="water-purity-dragdealer" class="dragdealer">
                            <div class="handle oval" data-water-purity-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.WasteFreeSeabed, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="wastefree-seabed-dragdealer" class="dragdealer">
                            <div class="handle oval" data-wastefree-seabed-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FeetFriendlyBottom, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="feet-friendly-bottom-dragdealer" class="dragdealer">
                            <div class="handle oval" data-feet-friendly-bottom-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SeaLifeDiversity, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="sea-life-diversity-dragdealer" class="dragdealer">
                            <div class="handle oval" data-sea-life-diversity-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CoralReef, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="coral-reef-dragdealer" class="dragdealer">
                            <div class="handle oval" data-coral-reef-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <!--End Sea-->
                <!--Activities-->
                <div class="form-group">
                    @Html.LabelFor(model => model.Walking, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="walking-dragdealer" class="dragdealer">
                            <div class="handle oval" data-walking-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Snorkeling, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="snorkeling-dragdealer" class="dragdealer">
                            <div class="handle oval" data-snorkeling-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Kayaking, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="kayaking-dragdealer" class="dragdealer">
                            <div class="handle oval" data-kayaking-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Camping, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="camping-dragdealer" class="dragdealer">
                            <div class="handle oval" data-camping-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <!--End Activities-->
                <!--Infrastructure-->
                <div class="form-group">
                    @Html.LabelFor(model => model.Infrastructure, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="infrastructure-dragdealer" class="dragdealer">
                            <div class="handle oval" data-infrastructure-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.LongTermStay, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        <div id="long-term-stay-dragdealer" class="dragdealer">
                            <div class="handle oval" data-long-term-stay-handle=""></div>
                        </div>
                    </div>
                    <button class="btn btn-reset" style="display: none;">Ignore</button>
                </div>
                <!--End Infrastructure-->
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input data-btn-submit-review="" type="submit" value="Post review" class="btn btn-cta" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/External/dragdealer.js")
    @Scripts.Render("~/Scripts/External/rainbowvis.js")
    @Scripts.Render("~/Content/External/slick/slick.min.js")
    @Scripts.Render("~/Scripts/Internal/reviews.js")
}

@section ReviewsStyles {
    @Styles.Render("~/Content/External/dragdealer.css")
    @Styles.Render("~/Content/External/slick/slick.css")
    @Styles.Render("~/Content/External/slick/slick-theme.css")
    @Styles.Render("~/Content/Internal/reviews.css")
}