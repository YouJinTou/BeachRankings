@model DetailedReviewViewModel

<div class="review-container col-xs-10 col-xs-offset-1">    
    <div class="row">
        <div class="col-sm-10">
            @{
                if (!string.IsNullOrEmpty(Model.TotalScore.ToString()))
                {
                    <div class="row">
                        <div class="col-sm-10">
                            <!--Beach-->
                            <div class="form-group row">
                                @Html.LabelFor(model => model.SandQuality, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.SandQuality</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="sand-quality-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.BeachCleanliness, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.BeachCleanliness</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="beach-cleanliness-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.BeautifulScenery, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.BeautifulScenery</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="beautiful-scenery-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.CrowdFree, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.CrowdFree</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="crowd-free-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <!--End Beach-->
                            <!--Sea-->
                            <div class="form-group row">
                                @Html.LabelFor(model => model.WaterPurity, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.WaterPurity</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="water-purity-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.WasteFreeSeabed, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.WasteFreeSeabed</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="wastefree-seabed-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.FeetFriendlyBottom, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.FeetFriendlyBottom</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="feet-friendly-bottom-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.SeaLifeDiversity, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.SeaLifeDiversity</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="sea-life-diversity-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.CoralReef, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.CoralReef</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="coral-reef-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <!--End Sea-->
                            <!--Activities-->
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Walking, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.Walking</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="walking-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Snorkeling, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.Snorkeling</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="snorkeling-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Kayaking, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.Kayaking</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="kayaking-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Camping, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.Camping</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="camping-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <!--End Activities-->
                            <!--Infrastructure-->
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Infrastructure, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.Infrastructure</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="infrastructure-meter"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.LongTermStay, htmlAttributes: new { @class = "control-label text-left col-sm-3" })
                                <div class="col-sm-9">
                                    <div class="criterion-score-box col-xs-1">@Model.LongTermStay</div>
                                    <div class="criterion-progress-bar col-xs-11 col-no-padding">
                                        <span id="long-term-stay-meter"></span>
                                    </div>
                                </div>
                            </div>
                            <!--End Infrastructure-->

                        </div>
                    </div>
                }
            }
        </div>
    </div>

    @{if (User.Identity.CanEditReview(Model.AuthorId))
        {
            <a class="btn btn-info pull-right" href="/Reviews/Edit/@Model.Id">Edit</a>
        }
    }
</div>

