                <span class="pull-right"><sub>A minimum of 150 symbols</sub></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WaterQuality, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-5">
                <div id="water-quality-dragdealer" class="dragdealer">
                    <div class="handle oval" data-water-quality-handle=""></div>
                </div>
            </div>
            <button class="btn reset-button" style="display: none;">Ignore</button>
        </div>

