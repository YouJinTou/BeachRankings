            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-5">
                @Html.TextAreaFor(model => model.Content,
               new { @class = "form-control create-review-textarea", @rows = 5, @cols = 40, @style = "resize: none;", @placeholder = "Share your impressions of this beach" })
